generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dataset {
  id        String   @id @default(cuid())
  filename  String
  mimeType  String
  sizeBytes Int
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id        String   @id @default(cuid())
  type      String
  status    String   // queued | running | failed | completed
  payload   Json
  result    Json?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
